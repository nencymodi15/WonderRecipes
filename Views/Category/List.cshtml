@model List<Category>

@{
    ViewData["Title"] = "Category List";
}

<h1>Category List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Parent Category ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.CategoryName</td>
                <td>@category.ParentCategoryID</td>
            </tr>
        }
    </tbody>
</table>
